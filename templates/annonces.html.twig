<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Annonces</title>
</head>
<body>
    {% if annoncesListe is defined and annoncesListe|length > 0 %}
        <h2>Liste des annonces :</h2>
        <ul>
            {% for annonce in annoncesListe %}
                <li>
                    <strong>Date :</strong> {{ annonce.datePromenade }}<br>
                    <strong>Horaire :</strong> {{ annonce.horaire }}<br>
                    <strong>Durée :</strong> {{ annonce.duree }} minutes<br>
                    <strong>Endroit :</strong> {{ annonce.endroitPromenade }}<br>
                    <strong>Tarif :</strong> {{ annonce.tarif }} €<br>
                    <strong>Status :</strong> {{ annonce.status }}<br>
                    <strong>Description :</strong> {{ annonce.description }}<br>
                    <strong>ID Utilisateur :</strong> {{ annonce.id_utilisateur }}
                    <hr>
                </li>
            {% else %}
                <li>Aucune annonce trouvée.</li>
            {% endfor %}
        </ul>

    {% elseif annonce is defined %}
        <h2>Détails de l’annonce :</h2>
        <ul>
            <li><strong>Date :</strong> {{ annonce.datePromenade }}</li>
            <li><strong>Horaire :</strong> {{ annonce.horaire }}</li>
            <li><strong>Durée :</strong> {{ annonce.duree }} minutes</li>
            <li><strong>Endroit :</strong> {{ annonce.endroitPromenade }}</li>
            <li><strong>Tarif :</strong> {{ annonce.tarif }} €</li>
            <li><strong>Status :</strong> {{ annonce.status }}</li>
            <li><strong>Description :</strong> {{ annonce.description }}</li>
            <li><strong>ID Utilisateur :</strong> {{ annonce.id_utilisateur }}</li>
        </ul>
    {% else %}
        <p>Aucune annonce à afficher.</p>
    {% endif %}

    <a href="?controleur=Index&methode=render">Accueil</a>
</body>
</html>
