{% extends 'base_template.twig' %}

{% block title %}Liste des utilisateurs — DogSitter{% endblock %}

{% block content %}
<div class="container-fluid py-5" style="background-color: #FEFAE0; min-height: 100vh;">

    <div class="row justify-content-center">

        <div class="col-12 col-lg-11">

            <div class="card shadow-lg border-0 p-4" style="background-color: #FAF6E9; border-radius: 12px;">

                <h2 class="fw-bold mb-4" style="color:#537031;">Liste des utilisateurs</h2>

                {% if utilisateursListe is defined and utilisateursListe|length > 0 %}

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

                        {% for utilisateur in utilisateursListe %}
                            <div class="col">
                                <div class="card h-100 shadow border-0" style="background-color:#F8F4E8; border-radius:12px;">

                                    <div class="card-body">

                                        <h5 class="fw-bold" style="color:#BC6C25;">
                                            {{ utilisateur.prenom }} {{ utilisateur.nom }}
                                        </h5>

                                        <p class="mb-2" style="font-size:0.95rem;">
                                            <strong>Email :</strong> {{ utilisateur.email }}<br>
                                            <strong>Téléphone :</strong> {{ utilisateur.numTelephone }}<br>
                                            <strong>Adresse :</strong> {{ utilisateur.adresse }}
                                        </p>

                                        <p class="mt-3">
                                            <span class="badge {% if utilisateur.estMaitre %}bg-success{% else %}bg-secondary{% endif %}">
                                                Maître
                                            </span>
                                            <span class="badge {% if utilisateur.estPromeneur %}bg-success{% else %}bg-secondary{% endif %}">
                                                Promeneur
                                            </span>
                                        </p>

                                    </div>

                                    <div class="card-footer text-end" style="background-color:#FAF6E9;">
                                        <small style="color:#537031;">ID : {{ utilisateur.id }}</small>
                                    </div>

                                </div>
                            </div>
                        {% endfor %}

                    </div>

                {% else %}
                    <div class="alert alert-warning text-center"
                         style="background-color:#F8F4E8; color:#BC6C25;">
                        Aucun utilisateur trouvé.
                    </div>
                {% endif %}

                <div class="mt-4">
                    <a href="?controleur=Index&methode=render" class="btn px-4"
                       style="background-color:#DDA15E; color:white;">
                        Retour à l’accueil
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
{% endblock %}
