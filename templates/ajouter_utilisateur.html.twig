{% extends 'base_template.twig' %}

{% block title %}Créer un utilisateur — DogSitter{% endblock %}

{% block content %}
<div class="container-fluid py-5" style="background-color: #FEFAE0; min-height: 100vh;">

    <div class="row justify-content-center">

        <div class="col-12 col-lg-8 col-xl-6">

            <div class="card shadow-lg border-0 p-4" style="background-color:#FAF6E9; border-radius:12px;">

                <h2 class="fw-bold mb-4" style="color:#537031;">Créer un utilisateur</h2>

                <form method="post">

                    {# Email #}
                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold" style="color:#537031;">Email</label>
                        <input type="email" id="email" name="email" class="form-control"
                               style="background-color:#F8F4E8; border-radius:10px;"
                               value="{{ email ?? '' }}" required>
                    </div>

                    {# Nom #}
                    <div class="mb-3">
                        <label for="nom" class="form-label fw-semibold" style="color:#537031;">Nom</label>
                        <input type="text" id="nom" name="nom" class="form-control"
                               style="background-color:#F8F4E8; border-radius:10px;"
                               value="{{ nom ?? '' }}" required>
                    </div>

                    {# Prénom #}
                    <div class="mb-3">
                        <label for="prenom" class="form-label fw-semibold" style="color:#537031;">Prénom</label>
                        <input type="text" id="prenom" name="prenom" class="form-control"
                               style="background-color:#F8F4E8; border-radius:10px;"
                               value="{{ prenom ?? '' }}" required>
                    </div>

                    {# Téléphone #}
                    <div class="mb-3">
                        <label for="numTelephone" class="form-label fw-semibold" style="color:#537031;">Téléphone</label>
                        <input type="text" id="numTelephone" name="numTelephone" class="form-control"
                               style="background-color:#F8F4E8; border-radius:10px;"
                               value="{{ numTelephone ?? '' }}">
                    </div>

                    {# Adresse #}
                    <div class="mb-3">
                        <label for="adresse" class="form-label fw-semibold" style="color:#537031;">Adresse</label>
                        <input type="text" id="adresse" name="adresse" class="form-control"
                               style="background-color:#F8F4E8; border-radius:10px;"
                               value="{{ adresse ?? '' }}">
                    </div>

                    {# Mot de passe #}
                    <div class="mb-3">
                        <label for="motDePasse" class="form-label fw-semibold" style="color:#537031;">Mot de passe</label>
                        <input type="password" id="motDePasse" name="motDePasse" class="form-control"
                               style="background-color:#F8F4E8; border-radius:10px;">
                    </div>

                    {# Rôles : Maître / Promeneur #}
                    <div class="row mb-3">

                        <div class="col-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="estMaitre" name="estMaitre"
                                    {% if estMaitre %}checked{% endif %}>
                                <label class="form-check-label fw-semibold" for="estMaitre" style="color:#537031;">
                                    Maître
                                </label>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="estPromeneur" name="estPromeneur"
                                    {% if estPromeneur %}checked{% endif %}>
                                <label class="form-check-label fw-semibold" for="estPromeneur" style="color:#537031;">
                                    Promeneur
                                </label>
                            </div>
                        </div>

                    </div>

                    {# Boutons #}
                    <div class="d-flex justify-content-between mt-4">

                        <a href="?controleur=Index&methode=render" class="btn px-4"
                           style="background-color:#DDA15E; color:white; border-radius:10px;">
                            Retour
                        </a>

                        <button type="submit" class="btn px-4"
                                style="background-color:#537031; color:white; border-radius:10px;">
                            Enregistrer
                        </button>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

{% block footer %}
{% endblock %}

{% endblock %}
