{% extends 'base_template.twig' %}

{% block title %}
    Détails de l'Annonce
{% endblock %}

{% block content %}
    <div class="container-fluid py-5" style="background-color: #FEFAE0; min-height: 100vh;">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-11">
                <div class="card shadow-lg border-0 p-4" style="background-color: #FAF6E9; border-radius:12px;">
                    {% if chiens is not empty and annonce is not null %}
                        <div class="row">
                            <aside class="col-12 col-md-4 mb-3">
                                <h4 class="fw-bold mb-3" style="color:#537031; font-size:1.1rem;">
                                    Les Chiens ({{ chiens|length }})
                                </h4>

                                {% for chien in chiens %}
                                    <div class="text-center mb-4 pb-2 border-bottom">
                                        {# Image du chien #}
                                        <div style="width: 100px; height: 100px; border: 1px solid #ccc; background-color: #F0F0F0; margin-bottom: 5px;"
                                            class="rounded-circle mx-auto d-flex align-items-center justify-content-center overflow-hidden">
                                            {% if chien.getCheminPhoto() %}
                                                <img src="{{ chien.getCheminPhoto() }}"
                                                    alt="Photo de {{ chien.getNom_Chien() }}"
                                                    class="img-fluid"
                                                    style="width: 100%; height: 100%; object-fit: cover;" />
                                            {% else %}
                                                <i class="bi bi-person-circle" style="font-size: 2.5rem; color: #aaa;"> </i>
                                            {% endif %}
                                        </div>

                                        {# Informations du chien #}
                                        <p class="mb-1 fw-bold" style="color:#BC6C25; font-size:1rem;">
                                            {{ chien.getNom_Chien() }}
                                        </p>
                                        <ul class="list-unstyled text-start small mt-1">
                                            <li><strong>Race :</strong> {{ chien.getRace() }}</li>
                                            <li><strong>Poids :</strong> {{ chien.getPoids() }}</li>
                                            <li><strong>Taille :</strong> {{ chien.getTaille() }}</li>
                                        </ul>
                                    </div>
                                {% endfor %}

                                <p class="mb-0" style="font-size:0.9rem; color:#537031;">
                                    Propriétaire: {{ proprietaire.getPrenom()|default('Inconnu') }} {{ proprietaire.getNom() }}
                                </p>
                            </aside>

                            <main class="col-12 col-md-8 ps-md-3">
                                {# Titre de l'annonce #}
                                <h3 class="fw-bold mb-3" style="color:#537031; font-size:1.3rem;">
                                    Promenade demandée le {{ annonce.datePromenade }}
                                </h3>

                                <p class="mb-3" style="font-size:1rem;">
                                    <span class="fw-bold" style="color:#BC6C25;">Heure :</span>
                                    {{ annonce.horaire }} (Durée: {{ annonce.duree }} min) | <span class="fw-bold"
                                        style="color:#BC6C25;">
                                        Lieu :
                                    </span>
                                    {{ annonce.endroitPromenade }}
                                </p>

                                <hr style="border-color: #DDA15E;" />

                                <div class="row">
                                    <div class="col-md-7 mb-3">
                                        <p class="fw-bold mb-2" style="color:#537031;">
                                            Description Complète :
                                        </p>
                                        <div class="p-3 border rounded description-bubble"
                                            style="background-color: #F8F4E8; font-size:0.95rem; max-height:220px; overflow-y:auto; overflow-x:hidden; padding:1rem; white-space:pre-line; overflow-wrap:anywhere;">
                                            {{ annonce.description|default('Aucune description fournie par le propriétaire.') | e | nl2br | raw }}
                                        </div>
                                            <span style="color:grey; font-size:0.8rem;">(max 500 caractères)</span><br>

                                    </div>
                                    

                                    <div class="col-md-5 mb-3">
                                        <p class="fw-bold mb-2" style="color:#537031;">
                                            Informations d'Annonce :
                                        </p>
                                        <ul class="list-unstyled ps-3" style="font-size:0.95rem;">
                                            <li>
                                                <strong>Tarif demandé :</strong>
                                                <span class="fw-bold" style="color:#BC6C25;">
                                                    {{ annonce.tarif }} €
                                                </span>
                                            </li>
                                            <li><strong>Statut actuel :</strong> {{ annonce.status }}</li>
                                            <li>
                                                <strong>Numéro Tél. :</strong>
                                                {{ proprietaire.getNumTelephone()|default('Non public') }}
                                            </li>
                                            <li>
                                                <strong>Adresse Prop. :</strong>
                                                {{ proprietaire.getAdresse()|default('Non spécifiée') }}
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <hr style="border-color: #DDA15E;" />

                                <div class="d-flex justify-content-end align-items-center mt-4 gap-3">
                                    {% if userConnecte.estPromeneur %}
                                    <a href="?controleur=Conversation&methode=afficherConversation&id_conversation={{
                                        conversationId
                                        }}"
                                        class="btn"
                                        style="background-color:#DDA15E; color:white;">
                                        Envoyer un message
                                    </a>

                                    {% if annonce.status == 'Disponible' %}
                                        <a href="?controleur=Annonce&methode=reserverAnnonce&id_annonce={{
                                            annonce.getIdAnnonce()
                                            }}"
                                            class="btn"
                                            style="background-color:#537031; color:white;">
                                            Postuler pour l'annonce
                                        </a>
                                    {% else %}
                                        <button class="btn" style="background-color:#537031; color:white;" disabled>
                                            Statut: {{ annonce.status }}
                                        </button>
                                    {% endif %}
                                    {% else %}
                                     <button class="btn" style="background-color:#ccc; color:white;" disabled>
                                        Seuls les promeneurs peuvent postuler
                                     </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning text-center"
                            role="alert"
                            style="background-color: #F8F4E8; color: #BC6C25;">
                            Les détails de cette annonce sont introuvables.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% block footer %}

    {% endblock %}
{% endblock %}
