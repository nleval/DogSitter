
{% extends 'base_template.twig' %}

{% block title %}Annonce — DogSitter{% endblock %}

{% block content %}
    <div class="container-fluid py-4" style="background-color: #FEFAE0;">
        <h2 class="mb-3">Détails de l'annonce</h2>
        <ul class="list-unstyled">
            <li><strong>Date :</strong> {{ annonce.datePromenade }}</li>
            <li><strong>Horaire :</strong> {{ annonce.horaire }}</li>
            <li><strong>Durée :</strong> {{ annonce.duree }} minutes</li>
            <li><strong>Endroit :</strong> {{ annonce.endroitPromenade }}</li>
            <li><strong>Tarif :</strong> {{ annonce.tarif }} €</li>
            <li><strong>Status :</strong> {{ annonce.status }}</li>
            <li><strong>Description :</strong> {{ annonce.description }}</li>
            <li><strong>ID Utilisateur :</strong> {{ annonce.idUtilisateur }}</li>
            
         </ul>

         {% if chiens is not empty %}
            {% for chien in chiens %}
                
                <h3>Détails du Chien : {{ chien.nom_chien }}</h3>
                <ul class="list-unstyled">
                    <li><strong>Race :</strong> {{ chien.race }}</li>
                    <li><strong>Poids :</strong> {{ chien.poids }}</li>
                    <li><strong>Taille :</strong> {{ chien.taille }}</li>
                    
                    {# Affichage de la photo #}
                    <li><strong>Photo : </strong>
                        <img src="{{ chien.cheminPhoto }}" alt="Photo de {{ chien.nom_chien }}" style="max-width: 200px; height: auto; border-radius: 8px; margin-top: 10px;">
                    </li>
                </ul>
                
                {# Séparateur si plusieurs chiens sont affichés #}
                {% if not loop.last %}
                    <hr class="my-4">
                {% endif %}

            {% endfor %}
        {% else %}
            <p>Aucun chien n'est associé à cette annonce.</p>
        {% endif %}
    </div>
 
    {% block footer %}
    {% endblock %}
{% endblock %}
