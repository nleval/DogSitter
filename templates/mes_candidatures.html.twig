{% extends 'base_template.twig' %}

{% block title %}Mes Candidatures — DogSynergie{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .mycand-page {
            background: linear-gradient(180deg, #FEFAE0 0%, #F8F4E8 100%);
            min-height: calc(100vh - 88px);
            padding: 0 16px 40px;
        }

        .mycand-shell {
            max-width: 1040px;
            margin: 0 auto;
        }

        .mycand-alert {
            border: none;
            border-radius: 12px;
            font-weight: 600;
        }

        .mycand-empty {
            background: #FAF6E9;
            border: 1px dashed #DDA15E;
            border-radius: 12px;
            padding: 26px;
            text-align: center;
            color: #537031;
            font-weight: 600;
        }

        .mycand-card {
            border: none;
            border-radius: 14px;
            overflow: hidden;
            background: #FAF6E9;
            box-shadow: 0 8px 20px rgba(83, 112, 49, 0.1);
            height: 100%;
        }

        .mycand-head {
            background: linear-gradient(135deg, #9AAD5A 0%, #537031 100%);
            color: #fff;
            padding: 14px 16px;
            font-weight: 700;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .mycand-meta {
            color: #6c757d;
            margin-bottom: 12px;
            font-size: 0.92rem;
        }

        .mycand-desc {
            background: #fff;
            border: 1px solid #E9D4B7;
            border-radius: 9px;
            padding: 10px 12px;
            font-size: 0.9rem;
            margin-bottom: 14px;
        }

        .mycand-foot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            margin-top: auto;
            padding-top: 10px;
        }

        .mycand-price {
            background: #9AAD5A;
            color: #fff;
            font-weight: 700;
            padding: 6px 10px;
            border-radius: 8px;
            font-size: 0.9rem;
        }

        .mycand-actions {
            border-top: 1px solid #E9D4B7;
            padding: 12px;
            display: flex;
            gap: 10px;
            background: #fffaf1;
        }

        .mycand-actions .btn {
            border: none;
            font-weight: 700;
            border-radius: 9px;
            padding: 7px 12px;
        }

        .btn-mycand-view {
            background: #537031;
            color: #fff;
            text-decoration: none;
            flex: 1;
        }

        .btn-mycand-cancel {
            background: #BC6C25;
            color: #fff;
            flex: 1;
        }
    </style>
{% endblock %}

{% block content %}
<div class="mycand-page">
    <div class="mycand-shell">
        {% if not userConnecte.estPromeneur %}
            <div class="alert mycand-alert text-center" style="background-color:#DDA15E; color:white;">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Accès refusé : seuls les promeneurs peuvent voir leurs candidatures.
            </div>
        {% else %}
            <div class="ds-profile-hero">
                <div class="ds-profile-hero-inner">
                    <h1 class="ds-profile-hero-title"><i class="bi bi-send-check-fill me-2"></i>Mes Candidatures</h1>
                    <p class="ds-profile-hero-subtitle">Suivez vos demandes envoyées et gérez-les en un clic.</p>
                </div>
            </div>

            {% if candidatures is empty %}
                <div class="mycand-empty">
                    <i class="bi bi-search me-1"></i>
                    Vous n'avez soumis aucune candidature pour le moment.
                    <a href="index.php?controleur=annonce&methode=afficherAllAnnonces" class="fw-bold ms-1" style="color:#DDA15E;">
                        Explorer les annonces
                    </a>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for c in candidatures %}
                        <div class="col-12 col-md-6">
                            <div class="card mycand-card">
                                <div class="mycand-head">
                                    <i class="bi bi-hand-thumbs-up"></i> {{ c.titre }}
                                </div>

                                <div class="card-body d-flex flex-column p-3">
                                    <p class="mycand-meta">
                                        <i class="bi bi-calendar-event me-1"></i> {{ c.datePromenade ?? 'Date non précisée' }}<br>
                                        <i class="bi bi-clock me-1"></i> {{ c.horaire ?? 'Horaire non précisé' }}<br>
                                        <i class="bi bi-geo-alt me-1"></i> {{ c.endroitPromenade ?? 'Lieu non précisé' }}
                                    </p>

                                    {% if c.description %}
                                        <div class="mycand-desc">{{ c.description }}</div>
                                    {% endif %}

                                    <div class="mycand-foot">
                                        <small class="text-muted fw-bold">Maître : {{ c.nom_maitre ?? 'N/A' }}</small>
                                        <span class="mycand-price"><i class="bi bi-cash me-1"></i>{{ c.tarif ?? '0' }} €</span>
                                    </div>
                                </div>

                                <div class="mycand-actions">
                                    <a href="index.php?controleur=annonce&methode=afficherAnnonce&id_annonce={{ c.id_annonce }}"
                                       class="btn btn-sm btn-mycand-view">
                                        <i class="bi bi-eye me-1"></i> Voir
                                    </a>
                                    <button class="btn btn-sm btn-mycand-cancel"
                                            onclick="annulerCandidature({{ c.id_annonce }}, this)">
                                        <i class="bi bi-trash me-1"></i> Annuler
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        {% endif %}
    </div>
</div>

{% endblock %}





