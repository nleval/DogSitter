{% extends 'base_template.twig' %}

{% block title %}Mes Candidatures — DogSitter{% endblock %}

{% block content %}
<div class="container py-5" style="background-color: #FEFAE0;">
    {% if not userConnecte.estPromeneur %}
        <div class="alert text-center fw-bold" style="background-color:#DDA15E; color:white;">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Accès refusé : seuls les promeneurs peuvent voir leurs candidatures.
        </div>
    {% else %}
        <h2 class="text-center mb-5 fw-bold" style="color:#537031; font-family: 'Poppins', sans-serif;">
            Mes Candidatures
        </h2>

        {% if candidatures is empty %}
            <div class="alert text-center" style="background-color:#F8F4E8; color:#537031;">
                Vous n'avez soumis aucune candidature pour le moment.
                <a href="index.php?controleur=annonce&methode=afficherAllAnnonces" style="color:#DDA15E; font-weight:bold;">
                    Explorer les annonces
                </a>
            </div>
        {% else %}
            <div class="row g-4">
                {% for c in candidatures %}
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm border-0" style="background-color:#FAF6E9; border-left:6px solid #9AAD5A;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold mb-2" style="color:#537031;">
                                    <i class="bi bi-hand-thumbs-up me-1"></i> {{ c.titre }}
                                </h5>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-calendar-event me-1"></i> {{ c.datePromenade ?? 'Date non précisée' }}<br>
                                    <i class="bi bi-clock me-1"></i> {{ c.horaire ?? 'Horaire non précisé' }}<br>
                                    <i class="bi bi-geo-alt me-1"></i> {{ c.endroitPromenade ?? 'Lieu non précisé' }}
                                </p>

                                {% if c.description %}
                                    <p class="small mb-2" style="background-color:#F8F4E8; padding:8px; border-radius:5px;">
                                        {{ c.description }}
                                    </p>
                                {% endif %}

                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <small class="text-muted fw-bold">Maître : {{ c.nom_maitre ?? 'N/A' }}</small>
                                    <span class="fw-bold text-white px-2 py-1 rounded" style="background-color:#9AAD5A;">
                                        <i class="bi bi-cash me-1"></i> {{ c.tarif ?? '0' }} €
                                    </span>
                                </div>
                            </div>

                            <div class="card-footer bg-light d-flex justify-content-between gap-2">
                                <a href="index.php?controleur=annonce&methode=afficherAnnonce&id_annonce={{ c.id_annonce }}" 
                                   class="btn btn-sm fw-bold text-white" style="background-color:#537031;">
                                    <i class="bi bi-eye me-1"></i> Voir
                                </a>
                                <button class="btn btn-sm fw-bold text-white" style="background-color:#BC6C25;"
                                        onclick="annulerCandidature({{ c.id_annonce }}, this)">
                                    <i class="bi bi-trash me-1"></i> Annuler
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
</div>

<style>
.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
}
</style>

{% endblock %}
