{% extends 'base_template.twig' %}

{% block title %}
    Modifier l'annonce — DogSynergie
{% endblock %}

{% block content %}
    <div style="background-color: #FEFAE0; min-height: 100vh; padding: 0; display: flex; flex-direction: column;">
        <div class="ds-profile-hero">
            <div class="ds-profile-hero-inner">
                <h1 class="ds-profile-hero-title"><i class="bi bi-pencil-square me-2"></i>Modifier l'annonce</h1>
                <p class="ds-profile-hero-subtitle">Mettez à jour les détails de votre annonce de promenade</p>
            </div>
        </div>

        <!-- Contenu principal -->
        <div style="flex: 1; padding: 50px 40px; display: flex; justify-content: center; background-color: #FEFAE0;">
            <div style="width: 100%; max-width: 600px;">
                <form method="post" style="background-color: #FAF6E9; padding: 40px; border-radius: 12px; box-shadow: 0 4px 16px rgba(83, 112, 49, 0.1);">
                    <!-- Titre -->
                    <div style="margin-bottom: 28px;">
                        <label for="titre" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Titre *</label>
                        {% if erreurs is defined and erreurs %}
                            {% for err in erreurs %}
                                {% if 'titre' in err|lower %}
                                    <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        <input type="text" id="titre" name="titre" value="{{ donnees.titre|default(annonce.titre) }}" minlength="10" maxlength="100" required title="Titre clair entre 10 et 100 caractères" placeholder="Ex : Promenade matinale au parc" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#DDA15E'; this.style.boxShadow='none';">
                    </div>

                    <!-- Date et Heure -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px; margin-bottom: 28px;">
                        <div>
                            <label for="datePromenade" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Date *</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'datepromenade' in err|lower or 'date' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <input type="date" id="datePromenade" name="datePromenade" value="{{ donnees.datePromenade|default(annonce.datePromenade) }}" required title="Choisissez la date de la promenade" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>
                        <div>
                            <label for="horaire" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Horaire *</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'horaire' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <input type="time" id="horaire" name="horaire" value="{{ donnees.horaire|default(annonce.horaire) }}" required title="Heure de début de la promenade (format 24h)" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>
                    </div>

                    <!-- Durée et Tarif -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px; margin-bottom: 28px;">
                        <div>
                            <label for="duree" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Durée (min) *</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'duree' in err|lower or 'durée' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <input type="number" id="duree" name="duree" value="{{ donnees.duree|default(annonce.duree) }}" min="15" step="15" required title="Durée en minutes, par pas de 15 (minimum 15)" placeholder="Ex : 60" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>
                        <div>
                            <label for="tarif" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Tarif (€) *</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'tarif' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <input type="number" id="tarif" name="tarif" value="{{ donnees.tarif|default(annonce.tarif) }}" min="1" step="0.01" required title="Montant en euros (minimum 1€)" placeholder="Ex : 20" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>
                    </div>

                    <!-- Lieu -->
                    <div style="margin-bottom: 28px;">
                        <label for="endroitPromenade" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Lieu</label>
                        {% if erreurs is defined and erreurs %}
                            {% for err in erreurs %}
                                {% if 'endroitpromenade' in err|lower or 'lieu' in err|lower %}
                                    <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        <input type="text" id="endroitPromenade" name="endroitPromenade" value="{{ donnees.endroitPromenade|default(annonce.endroitPromenade) }}" minlength="2" maxlength="120" title="Lieu de rendez-vous (2 à 120 caractères)" placeholder="Ex : Parc du Bois" style="width: 100%; padding: 12px 16px; border: 1px solid #9AAD5A; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                    </div>

                    <!-- Description -->
                    <div style="margin-bottom: 40px;">
                        <label for="description" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Description</label>
                        {% if erreurs is defined and erreurs %}
                            {% for err in erreurs %}
                                {% if 'description' in err|lower %}
                                    <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        <textarea id="description" name="description" rows="5" maxlength="500" title="Détails utiles pour le promeneur (max 500 caractères)" placeholder="Donnez des détails (comportement du chien, préférences...)" style="width: 100%; padding: 12px 16px; border: 1px solid #9AAD5A; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s; resize: vertical; font-family: inherit;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#9AAD5A'; this.style.boxShadow='none';">{{ donnees.description|default(annonce.description)|trim }}</textarea>
                    </div>

                    <!-- Boutons -->
                    <div style="display: flex; gap: 12px;">
                        <button type="submit" title="Enregistrer les modifications de l'annonce" style="flex: 1; background: linear-gradient(135deg, #537031 0%, #4a5f28 100%); color: #FEFAE0; padding: 14px 20px; font-size: 14px; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; transition: transform 0.2s; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.2);" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(83, 112, 49, 0.3)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 2px 8px rgba(83, 112, 49, 0.2)';">
                            <i class="bi bi-check-circle me-2"></i> Enregistrer les modifications
                        </button>
                        <a href="index.php?controleur=annonce&methode=afficherAnnonce&id_annonce={{ annonce.idAnnonce }}" style="flex: 1; background-color: #FAF6E9; color: #537031; padding: 14px 20px; font-size: 14px; border: 2px solid #DDA15E; border-radius: 6px; font-weight: 600; cursor: pointer; transition: all 0.2s; text-decoration: none; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.08);" onmouseover="this.style.backgroundColor='#F0F8EC'; this.style.borderColor='#537031';" onmouseout="this.style.backgroundColor='#FAF6E9'; this.style.borderColor='#DDA15E';">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}




