{% extends 'base_template.twig' %}

{% block title %}Avis — DogSitter{% endblock %}

{% block content %}
<div class="container-fluid py-5" style="background-color: #FEFAE0; min-height: 100vh;">
    <div class="container my-4">
        {% if avisListe is defined and avisListe|length > 0 %}
            <h2 style="color:#537031; font-family: 'Poppins', sans-serif; ">Liste des avis :</h2>
            <ul>
                {% for avis in avisListe %}
                <div class="card shadow-lg border-0 m-4" style="background-color: #FAF6E9; border-radius:12px;">
                    <div class="card-header" style="background-color:#537031; color:white; border-radius:10px 10px 0 0;">
                        <h4 class="mb-0">Nom d'utilisateur</h4>
                    </div>
                    <div class="p-4">
                        <strong style="color:#BC6C25">ID : {{ avis.id }}</strong><br>
                        <strong style="color:#BC6C25">Note : {{ avis.note }}</strong><br>
                        <strong style="color:#BC6C25">Commentaire : {{ avis.textecommentaire }}</strong><br>
                        <strong style="color:#BC6C25">ID de l'utilisateur maître : {{ avis.idutilisateur }}</strong><br>
                        <strong style="color:#BC6C25">ID de la promenade : {{ avis.idpromenade }}</strong><br>
                        <strong style="color:#BC6C25">ID du promeneur : {{ avis.idutilisateurnote }}</strong><br>
                    </div>
                </div>
                {% else %}
                    <h3>Aucun avis trouvé.</h3>
                {% endfor %}
            </ul>

        {% elseif avis is defined %}
            <h2 style="color:#537031; font-family: 'Poppins', sans-serif; ">Un avis :</h2>
            <ul>
                <div class="card shadow-lg border-0 m-4" style="background-color: #FAF6E9; border-radius:12px;">
                    <div class="card-header" style="background-color:#537031; color:white; border-radius:10px 10px 0 0;">
                        <h4 class="mb-0">Nom d'utilisateur</h4>
                    </div>
                    <div class="p-4">
                        <strong style="color:#BC6C25">ID : {{ avis.id }}</strong>
                        <strong style="color:#BC6C25">Note : {{ avis.note }}</strong>
                        <strong style="color:#BC6C25">Commentaire : {{ avis.textecommentaire }}</strong>
                        <strong style="color:#BC6C25">ID de l'utilisateur maître : {{ avis.idutilisateur }}</strong>
                        <strong style="color:#BC6C25">ID de la promenade : {{ avis.idpromenade }}</strong>
                        <strong style="color:#BC6C25">ID du promeneur : {{ avis.idutilisateurnote }}</strong>
                    </div>
                </div>
            </ul>

        {% elseif avisUtilisateurNote is defined %}
           <h2 style="color:#537031; font-family: 'Poppins', sans-serif; ">Liste des avis donnés à l'utilisateur {{ id_utilisateur_note }} :</h2>
            <ul>
                {% for avis in avisUtilisateurNote %}
                    <div class="card shadow-lg border-0 m-4" style="background-color: #FAF6E9; border-radius:12px;">
                        <div class="card-header" style="background-color:#537031; color:white; border-radius:10px 10px 0 0;">
                            <h4 class="mb-0">Nom d'utilisateur</h4>
                        </div>
                        <div class="p-4">
                            <strong style="color:#BC6C25">ID : {{ avis.id }}</strong>
                            <strong style="color:#BC6C25">Note : {{ avis.note }}</strong>
                            <strong style="color:#BC6C25">Commentaire : {{ avis.textecommentaire }}</strong>
                            <strong style="color:#BC6C25">ID de l'utilisateur maître : {{ avis.idutilisateur }}</strong>
                            <strong style="color:#BC6C25">ID de la promenade : {{ avis.idpromenade }}</strong>
                            <strong style="color:#BC6C25">ID du promeneur : {{ avis.idutilisateurnote }}</strong>
                        </div>
                    </div>
                {% else %}
                    <h3>Aucun avis trouvé.</h3>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun avis à afficher.</p>
        {% endif %}

        <a href="?controleur=Index&methode=render" class="btn px-4" style="background-color:#DDA15E; color:white;">Accueil</a>
    </div>
</div>
    {% block footer %}
    {% endblock %}
{% endblock %}
