{% extends 'base_template.twig' %}

{% block title %}Modifier mon profil — DogSynergie{% endblock %}

{% block content %}
    <div style="background-color: #FEFAE0; min-height: 100vh; padding: 0; display: flex; flex-direction: column;">
        <div class="ds-profile-hero">
            <div class="ds-profile-hero-inner">
                <h1 class="ds-profile-hero-title"><i class="bi bi-person-gear me-2"></i>Modifier mon profil</h1>
                <p class="ds-profile-hero-subtitle">Mettez à jour vos informations personnelles</p>
            </div>
        </div>

        <!-- Contenu principal -->
        <div style="flex: 1; padding: 50px 40px; display: flex; justify-content: center; background-color: #FEFAE0;">
            <div style="width: 100%; max-width: 600px;">
                <div style="background-color: #FAF6E9; padding: 40px; border-radius: 12px; box-shadow: 0 4px 16px rgba(83, 112, 49, 0.1);">
                    <form method="post" enctype="multipart/form-data" action="index.php?controleur=Utilisateur&methode=modifierProfil">
                        <input type="hidden" name="profil_unifie" value="1">
                        <div style="margin-bottom: 20px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Email</label>
                            <input type="text" name="email" value="{{ utilisateur.email }}" required style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Pseudo</label>
                            <input type="text" name="pseudo" value="{{ utilisateur.pseudo }}" required style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Photo de profil (optionnel)</label>
                            <input type="file" name="photo" accept="image/*" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Téléphone</label>
                            <input type="text" name="numTelephone" value="{{ utilisateur.numTelephone }}" style="width: 100%; padding: 12px 16px; border: 1px solid #9AAD5A; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Adresse</label>
                            <input type="text" name="adresse" value="{{ utilisateur.adresse }}" style="width: 100%; padding: 12px 16px; border: 1px solid #9AAD5A; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>

                        <div style="margin-bottom: 24px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Mot de passe (optionnel)</label>
                            <input type="password" name="motDePasse" placeholder="Laisser vide pour ne pas changer" style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;">
                        </div>

                        <div style="margin-bottom: 30px; padding-top: 20px; border-top: 1px solid #DDA15E;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 16px;">Rôles</label>
                            <div style="display: flex; gap: 24px;">
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <input type="checkbox" id="estMaitre" name="estMaitre" {% if utilisateur.getEstMaitre %}checked{% endif %} style="width: 18px; height: 18px; cursor: pointer; accent-color: #537031;">
                                    <label for="estMaitre" style="color: #537031; font-weight: 500; cursor: pointer; margin: 0;">Maître</label>
                                </div>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <input type="checkbox" id="estPromeneur" name="estPromeneur" {% if utilisateur.getEstPromeneur %}checked{% endif %} style="width: 18px; height: 18px; cursor: pointer; accent-color: #537031;">
                                    <label for="estPromeneur" style="color: #537031; font-weight: 500; cursor: pointer; margin: 0;">Promeneur</label>
                                </div>
                            </div>
                        </div>

                        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
                            <button type="submit" style="flex: 1; min-width: 220px; background: linear-gradient(135deg, #537031 0%, #4a5f28 100%); color: #FEFAE0; padding: 12px 24px; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; transition: transform 0.2s;" onmouseover="this.style.transform='translateY(-2px)';" onmouseout="this.style.transform='translateY(0)';">
                                Enregistrer les modifications
                            </button>
                            <a href="?controleur=Index&methode=render" style="flex: 1; min-width: 220px; display: inline-flex; align-items: center; justify-content: center; background-color: #FAF6E9; color: #537031; padding: 12px 24px; font-size: 14px; border: 2px solid #DDA15E; border-radius: 6px; font-weight: 600; text-decoration: none; transition: all 0.2s; cursor: pointer;" onmouseover="this.style.backgroundColor='#F0F8EC'; this.style.borderColor='#537031';" onmouseout="this.style.backgroundColor='#FAF6E9'; this.style.borderColor='#DDA15E';">
                                <i class="bi bi-house-door me-2"></i> Retour à l'accueil
                            </a>
                        </div>
                    </form>

                    {% if messagesErreurs is defined and messagesErreurs|length > 0 %}
                        <div class="alert alert-danger mt-4 mb-0">
                            <ul class="mb-0">
                                {% for message in messagesErreurs %}
                                    <li>{{ message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}




