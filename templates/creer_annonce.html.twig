{% extends 'base_template.twig' %}

{% block title %}
    Créer une annonce — DogSynergie
{% endblock %}

{% block content %}
    <div style="background-color: #FEFAE0; min-height: 100vh; padding: 0; display: flex; flex-direction: column;">
        <div class="ds-profile-hero">
            <div class="ds-profile-hero-inner">
                <h1 class="ds-profile-hero-title"><i class="bi bi-pencil-square me-2"></i>Créer une annonce</h1>
                <p class="ds-profile-hero-subtitle">Publiez une promenade pour votre chien</p>
            </div>
        </div>

        <!-- Contenu principal -->
        <div style="flex: 1; padding: 50px 40px; display: flex; justify-content: center; background-color: #FEFAE0;">
            <div style="width: 100%; max-width: 700px;">
                <div style="background-color: #FAF6E9; padding: 40px; border-radius: 12px; box-shadow: 0 4px 16px rgba(83, 112, 49, 0.1);">
                    <form method="post" action="?controleur=Annonce&methode=creerAnnonce">
                        <!-- TITRE -->
                        <div style="margin-bottom: 28px;">
                            <label for="titre" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Titre *</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'titre' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <input type="text"
                                value="{{ donnees.titre|default('') }}"
                                id="titre"
                                name="titre"
                                minlength="10"
                                maxlength="100"
                                title="Titre clair entre 10 et 100 caractères"
                                placeholder="Ex : Promenade matinale au parc"
                                style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#DDA15E'; this.style.boxShadow='none';" required />
                        </div>

                        <!-- DATE + HORAIRE -->
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 28px;">
                            <div>
                                <label for="datePromenade" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Date *</label>
                                {% if erreurs is defined and erreurs %}
                                    {% for err in erreurs %}
                                        {% if 'datepromenade' in err|lower or 'date' in err|lower %}
                                            <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                <input type="date"
                                    value="{{ donnees.datePromenade|default('') }}"
                                    id="datePromenade"
                                    name="datePromenade"
                                    min="{{ 'now'|date_modify('+1 day')|date('Y-m-d') }}"
                                    title="Choisissez une date de promenade à partir de demain"
                                    style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#DDA15E'; this.style.boxShadow='none';" required />
                            </div>
                            <div>
                                <label for="horaire" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Horaire *</label>
                                {% if erreurs is defined and erreurs %}
                                    {% for err in erreurs %}
                                        {% if 'horaire' in err|lower %}
                                            <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                <input type="time"
                                    value="{{ donnees.horaire|default('') }}"
                                    id="horaire"
                                    name="horaire"
                                    title="Heure de début de la promenade (format 24h)"
                                    style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#DDA15E'; this.style.boxShadow='none';" required />
                            </div>
                        </div>

                        <!-- DUREE + TARIF -->
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 28px;">
                            <div>
                                <label for="duree" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Durée (minutes) *</label>
                                {% if erreurs is defined and erreurs %}
                                    {% for err in erreurs %}
                                        {% if 'duree' in err|lower or 'durée' in err|lower %}
                                            <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                <input type="number"
                                    value="{{ donnees.duree|default('') }}"
                                    min="15"
                                    step="15"
                                    id="duree"
                                    name="duree"
                                    title="Durée en minutes, par pas de 15 (minimum 15)"
                                    placeholder="Ex : 60"
                                    style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#DDA15E'; this.style.boxShadow='none';" required />
                            </div>
                            <div>
                                <label for="tarif" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Tarif (€) *</label>
                                {% if erreurs is defined and erreurs %}
                                    {% for err in erreurs %}
                                        {% if 'tarif' in err|lower %}
                                            <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                <input type="number"
                                    value="{{ donnees.tarif|default('') }}"
                                    min="1"
                                    step="0.01"
                                    id="tarif"
                                    name="tarif"
                                    title="Montant en euros (minimum 1€)"
                                    placeholder="Ex : 20"
                                    style="width: 100%; padding: 12px 16px; border: 1px solid #DDA15E; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; transition: border-color 0.2s;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#DDA15E'; this.style.boxShadow='none';" required />
                            </div>
                        </div>

                        <!-- LIEU + DESCRIPTION -->
                        <div style="margin-bottom: 28px;">
                            <label for="endroitPromenade" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Lieu</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'endroitpromenade' in err|lower or 'lieu' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <input type="text"
                                value="{{ donnees.endroitPromenade|default('') }}"
                                id="endroitPromenade"
                                name="endroitPromenade"
                                minlength="2"
                                maxlength="120"
                                title="Lieu de rendez-vous (2 à 120 caractères)"
                                placeholder="Ex : Parc du Bois"
                                style="width: 100%; padding: 12px 16px; border: 1px solid #9AAD5A; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box;" />
                        </div>

                        <div style="margin-bottom: 28px;">
                            <label for="description" style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Description</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'description' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <textarea
                                id="description"
                                name="description"
                                rows="4"
                                maxlength="500"
                                title="Détails utiles pour le promeneur (max 500 caractères)"
                                placeholder="Donnez des détails (comportement du chien, préférences, accessoires...)"
                                style="width: 100%; padding: 12px 16px; border: 1px solid #9AAD5A; border-radius: 6px; font-size: 14px; background-color: #FEFAE0; color: #2c2c2c; box-sizing: border-box; resize: vertical; transition: border-color 0.2s; font-family: inherit;" onfocus="this.style.borderColor='#537031'; this.style.boxShadow='0 0 0 3px rgba(83, 112, 49, 0.1)';" onblur="this.style.borderColor='#9AAD5A'; this.style.boxShadow='none';">{{ donnees.description|default('')|trim }}</textarea>
                        </div>

                        <div style="margin-bottom: 28px;">
                            <label style="display: block; color: #537031; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">Chiens concernés</label>
                            {% if erreurs is defined and erreurs %}
                                {% for err in erreurs %}
                                    {% if 'chien' in err|lower %}
                                        <div style="color: #dc3545; font-size: 13px; margin-bottom: 8px;">{{ err }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <div style="display: flex; flex-wrap: wrap; gap: 12px;">
                                {% for chien in chiens %}
                                    <div style="display: flex; align-items: center; gap: 8px;">
                                        <input type="checkbox"
                                            name="chiens[]"
                                            value="{{ chien.getId_Chien() }}"
                                            id="chien{{ chien.getId_Chien() }}"
                                            {{
                                            donnees.chiens is defined and chien.getId_Chien() in donnees.chiens
                                                ? 'checked'
                                                : ''
                                            }}
                                            style="width: 18px; height: 18px; cursor: pointer; accent-color: #537031;" />
                                        <label for="chien{{ chien.getId_Chien() }}"
                                            style="color: #2c2c2c; font-size: 14px; cursor: pointer;">
                                            {{ chien.getNom_Chien() }}
                                        </label>
                                    </div>
                                {% else %}
                                    <p style="color: #9AAD5A; font-size: 14px; margin: 0;">
                                        Aucun chien trouvé — vous pouvez en ajouter depuis votre profil.
                                    </p>
                                {% endfor %}
                            </div>
                        </div>

                        <input type="hidden" name="status" value="active" />

                        <div style="display: flex; gap: 12px;">
                            <a href="index.php"
                                style="flex: 1; background-color: #FAF6E9; color: #537031; padding: 14px 20px; font-size: 14px; border: 2px solid #DDA15E; border-radius: 6px; font-weight: 600; text-decoration: none; text-align: center; transition: all 0.2s;" onmouseover="this.style.backgroundColor='#F0F8EC'; this.style.borderColor='#537031';" onmouseout="this.style.backgroundColor='#FAF6E9'; this.style.borderColor='#DDA15E';">
                                Annuler
                            </a>
                            <button type="submit"
                                style="flex: 1; background: linear-gradient(135deg, #537031 0%, #4a5f28 100%); color: #FEFAE0; padding: 14px 20px; font-size: 14px; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; transition: transform 0.2s; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.2);" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(83, 112, 49, 0.3)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 2px 8px rgba(83, 112, 49, 0.2)';">
                                Publier l'annonce
                            </button>
                        </div>
                    </form>
                </div>
            </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




