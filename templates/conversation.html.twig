{% extends 'base_template.twig' %}

{% block title %}Messagerie — DogSitter{% endblock %}

{% block content %}
<div class="container-fluid py-5" style="background-color: #FEFAE0; min-height: 100vh;">

    <div class="row justify-content-center">
        <div class="col-12 col-lg-11">

            <div class="card shadow-lg border-0 p-4" style="background-color: #FAF6E9; border-radius: 12px;">

                {% if conversationListe is defined and conversationListe|length > 0 %}

                    <h2 class="fw-bold mb-4" style="color:#537031;">Mes conversations</h2>

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

                        {% for conversation in conversationListe %}
                            <div class="col">
                                <a href="?controleur=Message&methode=afficherParConversation&id_conversation={{ conversation.idConversation }}"
                                   class="text-decoration-none">

                                    <div class="card h-100 shadow border-0"
                                         style="background-color:#F8F4E8; border-radius:12px; transition:0.2s;">

                                        <div class="card-body">

                                            <h6 class="fw-bold mb-2" style="color:#BC6C25;">
                                                Conversation #{{ conversation.idConversation }}
                                            </h6>

                                            <p class="small mb-0">
                                                Créée le : {{ conversation.dateCreation }}
                                            </p>

                                            <p class="mt-3 text-end">
                                                <span class="badge bg-success">Ouvrir</span>
                                            </p>

                                        </div>

                                    </div>

                                </a>
                            </div>
                        {% endfor %}

                    </div>

                {% elseif messageListe is defined and messageListe|length > 0 %}

                    <h2 class="fw-bold mb-4" style="color:#537031;">Messages</h2>

                    <div class="d-flex flex-column gap-3 mb-4">

                        {% for message in messageListe %}
                            <div class="card shadow-sm border-0"
                                 style="background-color:#F8F4E8; border-radius:12px;">

                                <div class="card-body">

                                    <p class="mb-1">
                                        {{ message.contenu }}
                                    </p>

                                    <small class="text-muted">
                                        {{ message.DateHeureMessage }} — Utilisateur #{{ message.idUtilisateur }}
                                    </small>

                                </div>

                            </div>
                        {% endfor %}

                    </div>

                    <a href="?controleur=Conversation&methode=afficherMesConversations"
                       class="btn px-4"
                       style="background-color:#DDA15E; color:white;">
                        ← Retour aux conversations
                    </a>

                {% else %}
                    <div class="alert alert-warning text-center"
                         style="background-color:#F8F4E8; color:#BC6C25;">
                        Aucune conversation trouvée.
                    </div>
                {% endif %}

                <div class="mt-4">
                    <a href="?controleur=Index&methode=render"
                       class="btn px-4"
                       style="background-color:#537031; color:white;">
                        Accueil
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>

{% block footer %}{% endblock %}
{% endblock %}
