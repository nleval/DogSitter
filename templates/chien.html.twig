{% extends 'base_template.twig' %}

{% block title %}Chiens — DogSitter
{% endblock %}

{% block content %}
	<div class="container-fluid p-5" style="background-color: #FEFAE0; min-height: 100vh;">
		{% if chiensListe is defined and chiensListe|length > 0 %}
			<h2 class="mb-4">Liste des chiens :</h2>
			{% for chien in chiensListe %}
            	<div class="row align-items-center border p-2 mb-2 rounded shadow" style="background-color: #FAF6E9;">
        
        			<div class="col-2"><strong>ID :</strong> {{ chien.id_chien }}</div>
        			<div class="col-3"><strong>Nom :</strong> {{ chien.nom_chien }}</div>
        			<div class="col-3"><strong>Race :</strong> {{ chien.race }}</div>
        			<div class="col-3"><strong>ID Utilisateur :</strong> {{ chien.id_utilisateur }}</div>
        
        		<div class="col-1 text-end">
        		    <a class="btn btn-primary btn-sm" style="background-color: #537031"
        			href="?controleur=Chien&methode=afficherChien&id_chien={{ chien.id_chien }}">
        		    	Voir les détails
                </a>
            </div>
        </div>

		{% else %}
			<li>Aucun chien trouvé.</li>
					{% endfor %}
			

		{% elseif chien is defined %}
			<h2>Détails du chien
				{{chien.id_chien}}:</h2>
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="./{{chien.cheminPhoto}}" class="img-fluid rounded-start object-fit-cover w-100 h-100" alt="{{chien.cheminPhoto}}">
					</div>
					<div class="col-md-8">
						<div class="card-body ">
							<h5 class="card-title">{{chien.nom_chien}}</h5>
							<p class="card-text">
								<strong>Poids :</strong>
								{{chien.poids}} Kg<br>
								<strong >Taille :</strong>
								{{chien.taille}} cm<br>
								<strong>Race :</strong>
								{{chien.race}}<br></p>
							<p class="card-text" style="color: #DDA15E">
								<small>ID Utilisateur :
									{{chien.id_utilisateur}}</small>
								<br><small>ID Chien :
									{{chien.id_chien}}</small>
							</p>
						</div>
					</div>
				</div>
			</div>
			<br>
		{% else %}
			<p>Aucun chien trouvé.</p>
		{% endif %}

	</div>
{% endblock %}
