{% extends 'base_template.twig' %}

{% block title %}Mes Promenades — DogSynergie{% endblock %}

{% block content %}
<div class="container py-5" style="background-color: #FEFAE0;">
    <div class="ds-profile-hero">
        <div class="ds-profile-hero-inner">
            <h1 class="ds-profile-hero-title"><i class="bi bi-map-fill me-2"></i>Mes Promenades Acceptées</h1>
            <p class="ds-profile-hero-subtitle">Suivez vos promenades validées et à venir.</p>
        </div>
    </div>
    {% if not userConnecte.estPromeneur %}
        <div class="alert text-center fw-bold" style="background-color:#DDA15E; color:white;">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Accès refusé : seuls les promeneurs peuvent voir leurs promenades.
        </div>
    {% else %}
        {% if promenades is empty %}
            <div class="alert text-center" style="background-color:#F8F4E8; color:#537031;">
                <i class="bi bi-info-circle me-2"></i>
                Vous n'avez aucune promenade acceptée pour le moment.
                <a href="index.php?controleur=annonce&methode=afficherAllAnnonces" style="color:#DDA15E; font-weight:bold;">
                    Explorer les annonces
                </a>
            </div>
        {% else %}
            <div class="row g-4">
                {% for p in promenades %}
                    <div class="col-lg-6">
                        <div class="card ds-lift-card h-100 shadow-lg border-0" style="background-color:#FAF6E9; border-left:6px solid #9AAD5A; border-top:3px solid #9AAD5A;">
                            
                            <!-- En-tête avec titre et date -->
                            <div class="card-header" style="background-color:#537031; color:white; padding:15px;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="mb-1 fw-bold">{{ p.titre }}</h5>
                                        <small class="text-light d-flex align-items-center gap-2">
                                            <i class="bi bi-calendar-event"></i>
                                            {% if p.datePromenade %}
                                                {{ p.datePromenade|date('d/m/Y') }}
                                            {% else %}
                                                Date non précisée
                                            {% endif %}
                                        </small>
                                    </div>
                                    <span class="badge" style="background-color:#9AAD5A; color:white;">
                                        <i class="bi bi-check-circle me-1"></i>Acceptée
                                    </span>
                                </div>
                            </div>

                            <div class="card-body">
                                <!-- Détails de la promenade -->
                                <div class="mb-4 pb-3 border-bottom" style="border-color:#DDA15E;">
                                    <h6 class="fw-bold mb-3" style="color:#537031;">
                                        <i class="bi bi-info-circle me-2"></i>Détails de la promenade
                                    </h6>
                                    <div class="row text-sm">
                                        <div class="col-6 mb-2">
                                            <small class="text-muted d-block">
                                                <i class="bi bi-clock" style="color:#BC6C25;"></i> Horaire
                                            </small>
                                            <strong style="color:#537031;">{{ p.horaire ?? 'Non précisé' }}</strong>
                                        </div>
                                        <div class="col-6 mb-2">
                                            <small class="text-muted d-block">
                                                <i class="bi bi-cash" style="color:#DDA15E;"></i> Tarif
                                            </small>
                                            <strong style="color:#537031;">{{ p.tarif ?? '0' }} €</strong>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <small class="text-muted d-block">
                                                <i class="bi bi-geo-alt" style="color:#9AAD5A;"></i> Lieu de promenade
                                            </small>
                                            <strong style="color:#537031;">{{ p.endroitPromenade ?? 'Non précisé' }}</strong>
                                        </div>
                                    </div>
                                    {% if p.description %}
                                        <div class="mt-3 p-3 rounded" style="background-color:#F8F4E8; border-left:3px solid #DDA15E;">
                                            <small class="text-muted d-block mb-2">Notes du maître :</small>
                                            <p class="mb-0 small" style="color:#537031;">{{ p.description }}</p>
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Informations du maître -->
                                <div class="mb-4 pb-3 border-bottom" style="border-color:#DDA15E;">
                                    <h6 class="fw-bold mb-3" style="color:#537031;">
                                        <i class="bi bi-person me-2"></i>Maître des chiens
                                    </h6>
                                    <div style="background-color:#F8F4E8; padding:12px; border-radius:6px;">
                                        <div class="mb-2">
                                            <strong style="color:#537031;">{{ p.nom_maitre ?? 'N/A' }}</strong>
                                        </div>
                                        <div class="text-sm text-muted mb-2">
                                            <i class="bi bi-envelope me-1" style="color:#BC6C25;"></i>
                                            <a href="mailto:{{ p.email_maitre }}" style="color:#BC6C25; text-decoration:none;">
                                                {{ p.email_maitre ?? 'N/A' }}
                                            </a>
                                        </div>
                                        {% if p.telephone_maitre %}
                                            <div class="text-sm text-muted">
                                                <i class="bi bi-telephone me-1" style="color:#9AAD5A;"></i>
                                                {{ p.telephone_maitre }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <!-- Informations du chien -->
                                {% if p.nom_chien %}
                                    <div>
                                        <h6 class="fw-bold mb-3" style="color:#537031;">
                                            <i class="bi bi-pawprint me-2"></i>Le chien
                                        </h6>
                                        <div style="background-color:#F8F4E8; padding:12px; border-radius:6px;">
                                            <div class="mb-2">
                                                <strong style="color:#537031;">{{ p.nom_chien }}</strong>
                                                <span class="badge ms-2" style="background-color:#9AAD5A; color:white;">
                                                    {{ p.race ?? 'Race non précisée' }}
                                                </span>
                                            </div>
                                            <div class="row text-sm mb-2">
                                                {% if p.poids %}
                                                    <div class="col-6">
                                                        <small class="text-muted">Poids :</small>
                                                        <strong style="color:#537031;">{{ p.poids }} kg</strong>
                                                    </div>
                                                {% endif %}
                                                {% if p.taille %}
                                                    <div class="col-6">
                                                        <small class="text-muted">Taille :</small>
                                                        <strong style="color:#537031;">{{ p.taille }}</strong>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="card-footer bg-light d-flex justify-content-between gap-2 flex-wrap">
                                <a href="index.php?controleur=conversation&methode=afficherConversations" 
                                   class="btn btn-sm fw-bold text-white" style="background-color:#537031; flex:1; min-width:120px;">
                                    <i class="bi bi-chat-dots me-1"></i> Messages
                                </a>
                                <a href="index.php?controleur=annonce&methode=afficherAnnonce&id_annonce={{ p.id_annonce }}" 
                                   class="btn btn-sm fw-bold text-white" style="background-color:#9AAD5A; flex:1; min-width:120px;">
                                    <i class="bi bi-eye me-1"></i> Détails
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
</div>





