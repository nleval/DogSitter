{% extends 'base_template.twig' %}

{% block title %}
    Détails de l’utilisateur — DogSynergie
{% endblock %}

{% block content %}
    <div style="background-color: #FEFAE0; min-height: 100vh; padding: 0; display: flex; flex-direction: column;">
        {% if utilisateur is defined %}
            <!-- Header professionnel avec identité graphique -->
            <div style="background: linear-gradient(135deg, #537031 0%, #4a5f28 100%); padding: 50px 40px; display: flex; align-items: flex-start; justify-content: space-between; gap: 40px; flex-wrap: wrap; box-shadow: 0 4px 16px rgba(83, 112, 49, 0.2);">
                <!-- Section photo + infos -->
                <div style="display: flex; align-items: flex-start; gap: 30px; flex: 1; min-width: 300px;">
                    {% if utilisateur.photoProfil is not empty %}
                        <img src="images/utilisateur/{{ utilisateur.photoProfil }}" alt="Photo de profil" class="rounded-circle" width="110" height="110" style="object-fit: cover; flex-shrink: 0; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2); border: 5px solid #FEFAE0;">
                    {% else %}
                        <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 110px; height: 110px; background-color: #9AAD5A; flex-shrink: 0; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2); border: 5px solid #FEFAE0;">
                            <i class="bi bi-person" style="font-size: 50px; color: #FEFAE0;"></i>
                        </div>
                    {% endif %}
                    <div style="flex: 1; padding-top: 6px;">
                        <h1 class="mb-3" style="font-size: 36px; font-weight: 600; color: #FEFAE0; margin: 0; letter-spacing: -0.5px;">{{ utilisateur.pseudo }}</h1>
                        {% if est_profil_public is defined and est_profil_public or not (est_profil_public is defined) %}
                            {% if utilisateur.estPromeneur %}
                                <a href="?controleur=utilisateur&methode=afficherAvisPromeneur&id_utilisateur={{ utilisateur.id }}" style="display: inline-flex; align-items: center; gap: 8px; padding: 6px 12px; background-color: rgba(254, 250, 224, 0.15); border: 1px solid rgba(254, 250, 224, 0.35); border-radius: 999px; color: #FEFAE0; font-size: 13px; font-weight: 600; margin-bottom: 12px; text-decoration: none; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='rgba(254, 250, 224, 0.25)'; this.style.transform='scale(1.05)'" onmouseout="this.style.backgroundColor='rgba(254, 250, 224, 0.15)'; this.style.transform='scale(1)'">
                                    <i class="bi bi-star-fill" style="color: #DDA15E;"></i>
                                    {% if statsAvis is defined and statsAvis.total > 0 %}
                                        {{ statsAvis.moyenne|number_format(1, '.', '') }}/5 ({{ statsAvis.total }})
                                    {% else %}
                                        Aucun avis
                                    {% endif %}
                                </a>
                            {% endif %}
                        {% endif %}
                        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                            {% if utilisateur.estMaitre %}
                                <span style="display: inline-flex; align-items: center; gap: 6px; padding: 8px 14px; background-color: #9AAD5A; color: #FEFAE0; border-radius: 20px; font-size: 13px; font-weight: 600; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);">
                                    <i class="bi bi-house-heart" style="font-size: 14px;"></i> Maître
                                </span>
                            {% endif %}
                            {% if utilisateur.estPromeneur %}
                                <span style="display: inline-flex; align-items: center; gap: 6px; padding: 8px 14px; background-color: #DDA15E; color: #FEFAE0; border-radius: 20px; font-size: 13px; font-weight: 600; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);">
                                    <i class="bi bi-person-walking" style="font-size: 14px;"></i> Promeneur
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Menu dropdown avec identité -->
                <div style="display: flex; gap: 12px; flex-wrap: wrap;">
                    {% if est_profil_public is defined and est_profil_public %}
                        <!-- Bouton Message uniquement -->
<a href="?controleur=conversation&methode=creerConversationAvecUtilisateur&id_utilisateur={{ utilisateur.id }}"
   class="btn"
   title="Démarrer une conversation avec cet utilisateur"
   style="flex: 1; background-color: #DDA15E; color: #FEFAE0; padding: 12px 16px; font-size: 13px; border: 1px solid #BC6C25; border-radius: 8px; font-weight: 700; text-decoration: none; text-align: center; transition: all 0.2s; display: inline-flex; align-items: center; justify-content: center; gap: 8px;"
   onmouseover="this.style.backgroundColor='#BC6C25'; this.style.borderColor='#9a5316';"
   onmouseout="this.style.backgroundColor='#DDA15E'; this.style.borderColor='#BC6C25';">                           
    <i class="bi bi-chat-dots"></i> Message
                        </a>
                    {% endif %}
                    {% if not (est_profil_public is defined and est_profil_public) %}
                    <div class="dropdown">
                        <button class="btn" type="button" id="menuDeroulant" data-bs-toggle="dropdown" aria-expanded="false" title="Afficher les actions de votre compte" style="background-color: #FEFAE0; color: #537031; padding: 10px 18px; font-size: 14px; border: none; border-radius: 6px; display: flex; align-items: center; gap: 8px; white-space: nowrap; font-weight: 600; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);">
                            <i class="bi bi-list"></i> Menu
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="menuDeroulant" style="background-color: #FAF6E9; border: 2px solid #DDA15E; font-size: 14px; min-width: 240px; border-radius: 8px; box-shadow: 0 8px 24px rgba(83, 112, 49, 0.2);">
                            {% if utilisateur.estMaitre %}
                            <li><a class="dropdown-item" href="?controleur=annonce&methode=afficherAnnoncesParUtilisateur&id_utilisateur={{ utilisateur.id }}" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                                <i class="bi bi-bookmark-heart me-2" style="color: #9AAD5A; font-size: 15px;"></i> Mes annonces
                            </a></li>
                            <li><a class="dropdown-item" href="?controleur=annonce&methode=voirCandidatures" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                                <i class="bi bi-clipboard-check me-2" style="color: #9AAD5A; font-size: 15px;"></i> Candidatures
                            </a></li>
                            <li><a class="dropdown-item" href="?controleur=annonce&methode=archivesAnnonces" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                                <i class="bi bi-archive me-2" style="color: #BC6C25; font-size: 15px;"></i> Archives
                            </a></li>
                            {% if utilisateur.estPromeneur %}
                                <li><hr class="dropdown-divider" style="margin: 8px 0; border-color: #DDA15E; opacity: 0.3;"></li>
                            {% endif %}
                        {% endif %}
                        {% if utilisateur.estPromeneur %}
                            <li><a class="dropdown-item" href="?controleur=annonce&methode=verMesCandidatures" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                                <i class="bi bi-hand-thumbs-up me-2" style="color: #DDA15E; font-size: 15px;"></i> Mes candidatures
                            </a></li>
                            <li><a class="dropdown-item" href="?controleur=annonce&methode=mesPromenades&statut=a_venir" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                                <i class="bi bi-map me-2" style="color: #DDA15E; font-size: 15px;"></i> Mes promenades
                            </a></li>
                            <li><a class="dropdown-item" href="?controleur=annonce&methode=mesPromenades&statut=archivee" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                                <i class="bi bi-archive me-2" style="color: #BC6C25; font-size: 15px;"></i> Archives
                            </a></li>
                        {% endif %}
                        <li><hr class="dropdown-divider" style="margin: 8px 0; border-color: #DDA15E; opacity: 0.3;"></li>
                        <li><a class="dropdown-item" href="?controleur=utilisateur&methode=afficherModif&id_utilisateur={{ utilisateur.id }}" style="color: #537031; padding: 11px 16px; font-weight: 500;">
                            <i class="bi bi-pencil me-2" style="color: #9AAD5A; font-size: 15px;"></i> Modifier profil
                        </a></li>
                        <li><a class="dropdown-item" href="?controleur=utilisateur&methode=deconnexion" style="color: #BC6C25; padding: 11px 16px; font-weight: 500;">
                            <i class="bi bi-box-arrow-right me-2" style="font-size: 15px;"></i> Déconnexion
                        </a></li>
                    </ul>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Contenu principal spacieux avec charte graphique -->
            <div style="flex: 1; padding: 50px 40px; display: flex; justify-content: center; background-color: #FEFAE0;">
                <div style="width: 100%; max-width: 900px;">
                    <!-- Section Informations -->
                    <div style="margin-bottom: 50px;">
                        <h2 style="font-size: 14px; font-weight: 600; color: #537031; margin-bottom: 24px; text-transform: uppercase; letter-spacing: 1px;">Contact</h2>
                        <div class="row g-3">
                            <!-- Email -->
                            <div class="col-12">
                                <div style="background-color: #FAF6E9; padding: 24px 26px; border-radius: 8px; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.08); border-left: 5px solid #9AAD5A;">
                                    <p style="color: #537031; font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin: 0 0 12px 0;">Email</p>
                                    <p style="color: #2c2c2c; font-size: 15px; margin: 0; word-break: break-all; line-height: 1.6; font-weight: 500;">{{ utilisateur.email }}</p>
                                </div>
                            </div>

                            <!-- Téléphone et Adresse -->
                            {% if utilisateur.numTelephone %}
                                <div class="col-12 col-md-6">
                                    <div style="background-color: #FAF6E9; padding: 24px 26px; border-radius: 8px; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.08); border-left: 5px solid #DDA15E; height: 100%;">
                                        <p style="color: #BC6C25; font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin: 0 0 12px 0;">Téléphone</p>
                                        <p style="color: #2c2c2c; font-size: 15px; margin: 0; line-height: 1.6; font-weight: 500;">{{ utilisateur.numTelephone }}</p>
                                    </div>
                                </div>
                            {% endif %}

                            {% if utilisateur.adresse %}
                                <div class="col-12 col-md-6">
                                    <div style="background-color: #FAF6E9; padding: 24px 26px; border-radius: 8px; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.08); border-left: 5px solid #9AAD5A; height: 100%;">
                                        <p style="color: #537031; font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin: 0 0 12px 0;">Adresse</p>
                                        <p style="color: #2c2c2c; font-size: 15px; margin: 0; line-height: 1.6; font-weight: 500;">{{ utilisateur.adresse }}</p>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Section Mes chiens -->
                    {% if utilisateur.estMaitre %}
                    <section style="margin-bottom: 50px;">
                        <h2 style="font-size: 18px; font-weight: 700; color: #537031; margin-bottom: 28px; text-transform: uppercase; letter-spacing: 1px;">Mes chiens</h2>
                        <div class="row g-4 align-items-center">
                            {% if chiens is defined and chiens|length > 0 %}
                                {% for chien in chiens %}
                                    <div class="col-12 col-sm-6 col-md-4">
                                        <a href="?controleur=chien&methode=afficherChien&id_chien={{ chien.id_chien }}" style="background-color: #FAF6E9; border-radius: 16px; box-shadow: 0 4px 18px rgba(83, 112, 49, 0.10); border: 1px solid #DDA15E; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 28px 18px 22px 18px; text-decoration: none; transition: all 0.22s; cursor: pointer; position: relative; overflow: hidden; min-height: 160px;" onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 8px 24px rgba(83, 112, 49, 0.18)'; this.style.borderColor='#DDA15E';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 18px rgba(83, 112, 49, 0.10)'; this.style.borderColor='#DDA15E';">
                                            {% if chien.cheminPhoto is not empty %}
                                                <img src="images/chiens/{{ chien.cheminPhoto }}" alt="Photo de {{ chien.nom_Chien }}" class="rounded-circle" width="90" height="90" style="object-fit: cover; margin-bottom: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.12); border: 4px solid #FEFAE0;">
                                            {% else %}
                                                <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 90px; height: 90px; background-color: #9AAD5A; margin-bottom: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.12); border: 4px solid #FEFAE0;">
                                                    <i class="bi bi-paw" style="font-size: 44px; color: #FEFAE0;"></i>
                                                </div>
                                            {% endif %}
                                            <span style="color: #537031; font-size: 16px; font-weight: 700; text-transform: capitalize;">{{ chien.nom_Chien }}</span>
                                        </a>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="col-12">
                                    <div class="alert alert-warning text-center" style="background-color:#F8F4E8; color:#BC6C25; border-radius:8px;">
                                        Aucun chien enregistré.
                                    </div>
                                </div>
                            {% endif %}
                            {% if not (est_profil_public is defined and est_profil_public) %}
                            <div class="col-12 col-sm-6 col-md-4">
                                <a href="?controleur=chien&methode=afficherFormulaire" title="Ajouter un nouveau chien à votre profil" style="background-color: #FAF6E9; border: 2px dashed #9AAD5A; padding: 28px 18px 22px 18px; border-radius: 16px; box-shadow: 0 4px 18px rgba(83, 112, 49, 0.10); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 160px; text-decoration: none; transition: all 0.22s; cursor: pointer;" onmouseover="this.style.boxShadow='0 8px 24px rgba(83, 112, 49, 0.18)'; this.style.borderColor='#537031'; this.style.backgroundColor='#F0F8EC';" onmouseout="this.style.boxShadow='0 4px 18px rgba(83, 112, 49, 0.10)'; this.style.borderColor='#9AAD5A'; this.style.backgroundColor='#FAF6E9';">
                                    <i class="bi bi-plus-circle" style="font-size: 36px; color: #9AAD5A; margin-bottom: 8px;"></i>
                                    <span style="color: #537031; font-size: 15px; font-weight: 600; margin: 0; text-transform: uppercase;">Ajouter un chien</span>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                        </div>
                    </section>
                            <!-- Bouton ajouter chien -->
                            {% if not (est_profil_public is defined and est_profil_public) %}
                            
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}

                    <!-- Bouton Retour juste après Mes chiens -->
                    <div style="text-align: center; margin-bottom: 40px;">
                        <a href="?controleur=Index&methode=render" class="btn" style="background: linear-gradient(135deg, #537031 0%, #4a5f28 100%); color: #FEFAE0; padding: 12px 40px; font-size: 14px; border: none; border-radius: 6px; display: inline-flex; align-items: center; gap: 8px; font-weight: 600; text-decoration: none; transition: background-color 0.2s, box-shadow 0.2s; cursor: pointer; box-shadow: 0 2px 8px rgba(83, 112, 49, 0.2);" onmouseover="this.style.background='linear-gradient(135deg, #41571e 0%, #2e3c16 100%)'; this.style.boxShadow='0 4px 16px rgba(83, 112, 49, 0.28)';" onmouseout="this.style.background='linear-gradient(135deg, #537031 0%, #4a5f28 100%)'; this.style.boxShadow='0 2px 8px rgba(83, 112, 49, 0.2)';">
                            <i class="bi bi-house-door"></i> Accueil
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div style="display: flex; align-items: center; justify-content: center; min-height: 100vh; background-color: #FEFAE0;">
                <div style="text-align: center; padding: 40px; max-width: 480px; background-color: #FAF6E9; border-radius: 12px; border: 2px solid #DDA15E; box-shadow: 0 4px 16px rgba(83, 112, 49, 0.1);">
                    <i class="bi bi-exclamation-circle" style="font-size: 48px; color: #DDA15E; display: block; margin-bottom: 20px;"></i>
                    <p style="font-size: 16px; color: #537031; margin: 0; font-weight: 500;">Aucun utilisateur trouvé.</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}




