{% extends 'base_template.twig' %}

{% block title %}
    Candidatures — DogSynergie
{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .cand-page {
            background: linear-gradient(180deg, #FEFAE0 0%, #F8F4E8 100%);
            min-height: calc(100vh - 88px);
            padding: 0 16px 40px;
        }

        .cand-shell {
            max-width: 980px;
            margin: 0 auto;
        }

        .cand-alert {
            border: none;
            border-radius: 12px;
            font-weight: 600;
        }

        .cand-annonce-card {
            border: none;
            border-radius: 14px;
            overflow: hidden;
            background: #FAF6E9;
            box-shadow: 0 8px 20px rgba(83, 112, 49, 0.1);
            margin-bottom: 18px;
        }

        .cand-annonce-head {
            background: linear-gradient(135deg, #BC6C25 0%, #DDA15E 100%);
            color: #fff;
            padding: 14px 18px;
        }

        .cand-annonce-head h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .cand-item {
            border: 1px solid #E9D4B7;
            border-radius: 10px;
            margin-bottom: 10px;
            background: #fff;
            padding: 12px 14px;
        }

        .cand-user {
            color: #537031;
            font-weight: 700;
            margin: 0 0 2px;
        }

        .cand-meta {
            color: #6c757d;
            font-size: 0.9rem;
            margin: 0;
        }

        .cand-actions .btn {
            border: none;
            font-weight: 700;
            border-radius: 9px;
            padding: 6px 12px;
        }

        .btn-cand-profile {
            background: #537031;
            color: #fff;
            text-decoration: none;
        }

        .btn-cand-accept {
            background: #9AAD5A;
            color: #fff;
        }

        .btn-cand-refuse {
            background: #BC6C25;
            color: #fff;
        }

        .cand-empty {
            background: #FAF6E9;
            border: 1px dashed #DDA15E;
            border-radius: 12px;
            padding: 28px;
            text-align: center;
            color: #537031;
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block content %}
<div class="cand-page">
    <div class="cand-shell">
        {% if not userConnecte.estMaitre %}
            <div class="alert cand-alert text-center" style="background-color:#DDA15E; color:white;">
                Accès refusé. Seuls les maîtres peuvent voir les candidatures.
            </div>
        {% else %}
            <div class="ds-profile-hero">
                <div class="ds-profile-hero-inner">
                    <h1 class="ds-profile-hero-title"><i class="bi bi-inbox-fill me-2"></i>Mes Candidatures Reçues</h1>
                    <p class="ds-profile-hero-subtitle">Consultez les demandes reçues et validez rapidement les promeneurs.</p>
                </div>
            </div>

            {% if candidatures is empty %}
                <div class="cand-empty">
                    <i class="bi bi-envelope-open me-1"></i>
                    Aucune candidature reçue pour le moment.
                </div>
            {% else %}
                {% set current_annonce_id = null %}

                {% for c in candidatures %}
                    {% if current_annonce_id != c.id_annonce %}
                        {% if current_annonce_id != null %}
                                </div>
                            </div>
                        {% endif %}
                        <div class="card cand-annonce-card">
                            <div class="cand-annonce-head">
                                <h5>
                                    <span><i class="bi bi-megaphone me-1"></i>{{ c.titre }}</span>
                                </h5>
                            </div>
                            <div class="card-body p-3">
                    {% endif %}

                    <div class="cand-item d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3"
                         data-id-annonce="{{ c.id_annonce }}" data-id-candidat="{{ c.id_candidat }}">
                        <div>
                            <h6 class="cand-user">{{ c.pseudo }}</h6>
                            <p class="cand-meta mb-0"><i class="bi bi-envelope me-1"></i>{{ c.email }}</p>
                        </div>

                        <div class="cand-actions d-flex gap-2">
                            <a class="btn btn-sm btn-cand-profile"
                               href="?controleur=utilisateur&methode=afficherUtilisateur&id_utilisateur={{ c.id_candidat }}">
                                <i class="bi bi-person-circle"></i> Profil
                            </a>
                            <button class="btn btn-sm btn-cand-accept"
                                    onclick="accepterCandidature({{ c.id_annonce }}, {{ c.id_candidat }}, this)">
                                <i class="bi bi-check-lg"></i> Accepter
                            </button>
                            <button class="btn btn-sm btn-cand-refuse"
                                    onclick="refuserCandidature({{ c.id_annonce }}, {{ c.id_candidat }}, this)">
                                <i class="bi bi-x-lg"></i> Refuser
                            </button>
                        </div>
                    </div>

                    {% set current_annonce_id = c.id_annonce %}
                {% endfor %}
                            </div>
                        </div>
            {% endif %}
        {% endif %}
    </div>
</div>

{% endblock %}




