{% extends 'base_template.twig' %}

{% block title %}Conversation — DogSitter{% endblock %}

{% block head %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --ds-cream: #FEFAE0;
            --ds-sand: #FAF6E9;
            --ds-green: #537031;
            --ds-green-light: #9AAD5A;
            --ds-orange: #DDA15E;
            --ds-orange-dark: #BC6C25;
            --ds-ink: #2c2c2c;
            --ds-border: #DDA15E;
            --ds-white: #FAF6E9;
        }

        body {
            background-color: var(--ds-cream) !important;
            overflow: hidden;
        }

        main {
            padding: 0 !important;
            margin: 0 !important;
            height: calc(100vh - 82px) !important;
            overflow: hidden !important;
            background-color: var(--ds-cream) !important;
            font-family: "Sora", sans-serif;
        }

        body footer {
            display: none;
        }

        .dm-shell {
            height: 100%;
            padding: 20px;
        }

        .dm-card {
            height: 100%;
            background: var(--ds-sand);
            border: 1px solid rgba(221, 161, 94, 0.45);
            border-radius: 18px;
            display: flex;
            flex-direction: column;
            box-shadow: 0 14px 30px rgba(83, 112, 49, 0.08);
        }

        .dm-header {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px 18px;
            border-bottom: 1px solid rgba(221, 161, 94, 0.5);
            background: var(--ds-sand);
        }

        .dm-back {
            width: 34px;
            height: 34px;
            border-radius: 9px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: var(--ds-green);
            text-decoration: none;
            border: 1px solid rgba(221, 161, 94, 0.6);
            background: var(--ds-sand);
        }

        .dm-user {
            display: flex;
            align-items: center;
            gap: 12px;
            flex: 1;
            min-width: 0;
        }

        .dm-avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid var(--ds-cream);
            background: var(--ds-green-light);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .dm-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .dm-meta h1 {
            font-size: 16px;
            font-weight: 600;
            color: var(--ds-ink);
            margin: 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .dm-meta span {
            display: block;
            font-size: 12px;
            color: var(--ds-orange-dark);
        }

        .dm-profile {
            font-size: 12px;
            font-weight: 600;
            color: var(--ds-green);
            text-decoration: none;
            padding: 6px 10px;
            border: 1px solid rgba(221, 161, 94, 0.6);
            border-radius: 10px;
            background: var(--ds-sand);
            white-space: nowrap;
        }

        .dm-header-actions {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .dm-actions-btn {
            width: 34px;
            height: 34px;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(221, 161, 94, 0.6);
            background: var(--ds-sand);
            color: var(--ds-green);
            cursor: pointer;
        }

        .dm-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px 16px 12px;
            background: var(--ds-cream);
        }

        .dm-stream {
            max-width: 860px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .dm-row {
            display: flex;
            align-items: flex-end;
            gap: 8px;
            width: 100%;
        }

        .dm-row.me {
            justify-content: flex-end;
        }

        .dm-row.them {
            justify-content: flex-start;
        }

        .dm-bubble {
            max-width: 90%;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            line-height: 1.25;
            word-wrap: break-word;
            overflow-wrap: anywhere;
            white-space: pre-wrap;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
        }

        .dm-bubble.me {
            background: var(--ds-orange);
            color: var(--ds-white);
            border-bottom-right-radius: 6px;
            margin-left: auto;
        }

        .dm-bubble.them {
            background: var(--ds-sand);
            color: var(--ds-ink);
            border: 1px solid rgba(221, 161, 94, 0.6);
            border-bottom-left-radius: 6px;
        }

        .dm-time {
            font-size: 10px;
            color: var(--ds-green-light);
            margin-top: 2px;
        }

        .dm-msg-actions {
            display: flex;
            justify-content: flex-end;
            margin-top: 4px;
        }

        .dm-msg-more {
            border: none;
            background: transparent;
            color: var(--ds-orange-dark);
            font-size: 12px;
            font-weight: 700;
            padding: 0 6px;
            cursor: pointer;
        }

        .dm-sheet {
            position: fixed;
            inset: 0;
            display: none;
            z-index: 9999;
        }

        .dm-sheet.active {
            display: block;
        }

        .dm-sheet-backdrop {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.25);
        }

        .dm-sheet-panel {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--ds-sand);
            border-radius: 18px 18px 0 0;
            padding: 16px;
            box-shadow: 0 -10px 30px rgba(83, 112, 49, 0.2);
        }

        .dm-sheet-title {
            font-size: 14px;
            font-weight: 600;
            color: var(--ds-ink);
            margin: 0 0 10px 0;
        }

        .dm-sheet-field {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px 10px;
            border: 1px solid rgba(221, 161, 94, 0.6);
            border-radius: 10px;
            font-size: 12px;
        }

        .dm-sheet-actions {
            display: flex;
            gap: 8px;
        }

        .dm-sheet-actions button {
            flex: 1;
            border: none;
            border-radius: 10px;
            padding: 8px 10px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
        }

        .dm-sheet-primary {
            background: var(--ds-green);
            color: var(--ds-white);
        }

        .dm-sheet-danger {
            background: #f6e3d1;
            color: var(--ds-orange-dark);
        }

        .dm-msg-popover {
            position: absolute;
            right: 0;
            top: 18px;
            background: var(--ds-sand);
            border: 1px solid rgba(221, 161, 94, 0.6);
            border-radius: 10px;
            padding: 6px 8px;
            min-width: 140px;
            box-shadow: 0 8px 16px rgba(83, 112, 49, 0.12);
            z-index: 10;
        }

        .dm-msg-popover button {
            width: 100%;
            border: none;
            background: transparent;
            color: var(--ds-orange-dark);
            font-size: 11px;
            font-weight: 600;
            text-align: left;
            padding: 4px 2px;
            cursor: pointer;
        }

        .dm-edit-bar {
            display: none;
            align-items: center;
            justify-content: space-between;
            gap: 8px;
            margin: 0 auto 8px;
            max-width: 860px;
            padding: 6px 10px;
            border: 1px dashed rgba(221, 161, 94, 0.7);
            border-radius: 10px;
            font-size: 11px;
            color: var(--ds-orange-dark);
            background: var(--ds-sand);
        }

        .dm-edit-bar button {
            border: none;
            background: transparent;
            color: var(--ds-green);
            font-weight: 600;
            cursor: pointer;
            font-size: 11px;
        }

        .dm-composer {
            border-top: 1px solid rgba(221, 161, 94, 0.5);
            background: var(--ds-sand);
            padding: 12px 16px 14px;
        }

        .dm-form {
            max-width: 860px;
            margin: 0 auto;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .dm-form input {
            flex: 1;
            border: 1px solid rgba(221, 161, 94, 0.55);
            border-radius: 20px;
            padding: 9px 12px;
            font-size: 12px;
            background: var(--ds-cream);
            outline: none;
        }

        .dm-form button {
            border: none;
            background: var(--ds-green);
            color: var(--ds-white);
            font-weight: 600;
            padding: 8px 14px;
            border-radius: 18px;
            cursor: pointer;
        }

        .dm-empty {
            text-align: center;
            color: var(--ds-green-light);
            padding: 60px 20px;
        }
    </style>
{% endblock %}

{% block content %}
<div class="dm-shell">
    <div class="dm-card">
        <div class="dm-header">
            <a class="dm-back" href="?controleur=conversation&methode=afficherMesConversations" title="Retour">
                <i class="bi bi-arrow-left"></i>
            </a>

            <div class="dm-user">
                <div class="dm-avatar">
                    {% if autreUtilisateur and autreUtilisateur.photoProfil %}
                        <img src="images/utilisateur/{{ autreUtilisateur.photoProfil }}" alt="{{ autreUtilisateur.pseudo }}">
                    {% else %}
                        <i class="bi bi-person" style="font-size: 18px; color: #FEFAE0;"></i>
                    {% endif %}
                </div>

                <div class="dm-meta">
                    <h1>
                        {% if autreUtilisateur %}
                            {{ autreUtilisateur.pseudo }}
                        {% else %}
                            Conversation
                        {% endif %}
                    </h1>
                    <span>Conversation active</span>
                </div>
            </div>

            <div class="dm-header-actions">
                {% if autreUtilisateur %}
                    <a class="dm-profile" href="?controleur=utilisateur&methode=afficherUtilisateur&id_utilisateur={{ autreUtilisateur.id }}">
                        Voir le profil
                    </a>
                {% endif %}
                <button type="button" class="dm-actions-btn" id="openConversationSheet" title="Options">
                    <i class="bi bi-three-dots"></i>
                </button>
            </div>
        </div>

        <div class="dm-messages">
            <div class="dm-stream">
                {% if messageListe and messageListe|length > 0 %}
                    {% for message in messageListe %}
                        {% set est_moi = (message.idUtilisateur == utilisateurConnecte.id) %}

                        <div class="dm-row {{ est_moi ? 'me' : 'them' }}">
                            {% if not est_moi %}
                                <div class="dm-avatar" style="width: 28px; height: 28px;">
                                    {% if message.utilisateur and message.utilisateur.photoProfil %}
                                        <img src="images/utilisateur/{{ message.utilisateur.photoProfil }}" alt="{{ message.utilisateur.pseudo }}">
                                    {% else %}
                                        <i class="bi bi-person" style="font-size: 14px; color: #FEFAE0;"></i>
                                    {% endif %}
                                </div>
                            {% endif %}

                            <div>
                                <div class="dm-bubble {{ est_moi ? 'me' : 'them' }} message-content">
                                    <p style="margin: 0;">{{ message.contenu }}</p>
                                </div>
                                <div class="dm-time" style="{{ est_moi ? 'text-align: right;' : '' }}">
                                    {{ message.dateHeureMessage|date('d/m/Y H:i') }}
                                    {% if message.estModifie %}
                                        · modifie
                                    {% endif %}
                                </div>
                                {% if est_moi %}
                                    <div class="dm-msg-actions" style="position: relative;">
                                        <button
                                            type="button"
                                            class="dm-msg-more"
                                            data-message-id="{{ message.idMessage }}"
                                            data-message-text="{{ message.contenu|e('html_attr') }}"
                                            title="Options">
                                            ...
                                        </button>
                                        <div class="dm-msg-popover" style="display: none;">
                                            <button type="button" class="dm-edit-trigger" data-message-id="{{ message.idMessage }}" data-message-text="{{ message.contenu|e('html_attr') }}">Modifier</button>
                                            <form method="post" action="?controleur=message&methode=supprimerMessage" onsubmit="return confirm('Supprimer ce message pour tous ?');">
                                                <input type="hidden" name="id_message" value="{{ message.idMessage }}">
                                                <button type="submit">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="dm-empty">
                        <i class="bi bi-chat-dots" style="font-size: 44px; color: var(--ds-orange);"></i>
                        <div style="margin-top: 8px;">Aucun message pour le moment.</div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="dm-composer">
            <div class="dm-edit-bar" id="editBar">
                <span>Edition du message</span>
                <button type="button" id="cancelEdit">Annuler</button>
            </div>
            <form method="post" action="?controleur=message&methode=envoyerMessage" class="dm-form">
                <input type="hidden" name="id_conversation" value="{{ idConversation }}">
                <input type="hidden" name="edit_message_id" id="editMessageId" value="">
                <input type="text" name="contenu" id="messageInput" placeholder="Message..." required>
                <button type="submit" id="sendButton">Envoyer</button>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const messageContents = document.querySelectorAll('.message-content p');
    messageContents.forEach(element => {
        const text = element.innerText;
        const urlRegex = /(index\.php\?[^\s]+)/g;
        const html = text.replace(urlRegex, function(url) {
            return '<a href="' + url + '" style="color: #537031; text-decoration: underline; font-weight: 600;">Lien annonce</a>';
        });
        element.innerHTML = html;
    });

    const messagesContainer = document.querySelector('.dm-messages');
    if (messagesContainer) {
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    const conversationSheet = document.getElementById('conversationSheet');
    const openConversationSheet = document.getElementById('openConversationSheet');
    const messageButtons = document.querySelectorAll('.dm-msg-more');
    const editTriggers = document.querySelectorAll('.dm-edit-trigger');
    const editBar = document.getElementById('editBar');
    const cancelEdit = document.getElementById('cancelEdit');
    const editMessageId = document.getElementById('editMessageId');
    const messageInput = document.getElementById('messageInput');
    const sendButton = document.getElementById('sendButton');

    function openSheet(sheet) {
        sheet.classList.add('active');
    }

    function closeSheet(sheet) {
        sheet.classList.remove('active');
    }

    if (openConversationSheet) {
        openConversationSheet.addEventListener('click', function() {
            openSheet(conversationSheet);
        });
    }

    messageButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.stopPropagation();
            const container = btn.closest('.dm-msg-actions');
            const popover = container ? container.querySelector('.dm-msg-popover') : null;
            if (!popover) return;

            document.querySelectorAll('.dm-msg-popover').forEach(el => {
                if (el !== popover) {
                    el.style.display = 'none';
                }
            });

            popover.style.display = popover.style.display === 'block' ? 'none' : 'block';
        });
    });

    editTriggers.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            const msgId = btn.getAttribute('data-message-id');
            const msgText = btn.getAttribute('data-message-text');
            editMessageId.value = msgId;
            messageInput.value = msgText;
            editBar.style.display = 'flex';
            sendButton.textContent = 'Modifier';
            messageInput.focus();

            const popover = btn.closest('.dm-msg-popover');
            if (popover) {
                popover.style.display = 'none';
            }
        });
    });

    if (cancelEdit) {
        cancelEdit.addEventListener('click', function() {
            editMessageId.value = '';
            messageInput.value = '';
            editBar.style.display = 'none';
            sendButton.textContent = 'Envoyer';
            messageInput.focus();
        });
    }

    document.querySelectorAll('[data-sheet-close]')
        .forEach(el => el.addEventListener('click', function() {
            closeSheet(conversationSheet);
        }));

    document.addEventListener('click', function(e) {
        if (!e.target.closest('.dm-msg-actions')) {
            document.querySelectorAll('.dm-msg-popover').forEach(el => {
                el.style.display = 'none';
            });
        }
    });
});
</script>

<div class="dm-sheet" id="conversationSheet">
    <div class="dm-sheet-backdrop" data-sheet-close></div>
    <div class="dm-sheet-panel">
        <div class="dm-sheet-title">Conversation</div>
        <form method="post" action="?controleur=conversation&methode=renommerConversation">
            <input type="hidden" name="id_conversation" value="{{ idConversation }}">
            <input class="dm-sheet-field" type="text" name="titre" maxlength="80" placeholder="Renommer la conversation" required>
            <div class="dm-sheet-actions">
                <button class="dm-sheet-primary" type="submit">Enregistrer</button>
                <button class="dm-sheet-danger" type="button" data-sheet-close>Annuler</button>
            </div>
        </form>
        <form method="post" action="?controleur=conversation&methode=supprimerConversation" onsubmit="return confirm('Supprimer cette conversation pour tous ?');" style="margin-top:10px;">
            <input type="hidden" name="id_conversation" value="{{ idConversation }}">
            <button class="dm-sheet-danger" type="submit" style="width:100%;">Supprimer</button>
        </form>
    </div>
</div>

{% endblock %}