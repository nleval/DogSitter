{% extends 'base_template.twig' %}

{% block title %}{{ title }} — DogSynergie{% endblock %}

{% block content %}
{% if not estPromeneur %}
<div class="container py-5" style="background-color: #FEFAE0;">
    <div class="alert text-center fw-bold" style="background-color:#DDA15E; color:white;">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Accès refusé : seuls les promeneurs peuvent voir leurs promenades.
    </div>
</div>
{% else %}
<div style="background-color: #FEFAE0; min-height: 100vh; padding: 0 20px 40px;">
    <div style="max-width: 1200px; margin: 0 auto;">
        <div class="ds-profile-hero">
            <div class="ds-profile-hero-inner">
                <h1 class="ds-profile-hero-title"><i class="bi bi-map me-2"></i>{{ title }}</h1>
                <p class="ds-profile-hero-subtitle">Gérez vos promenades acceptées</p>
            </div>
        </div>

        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 40px; flex-wrap: wrap; gap: 20px;">
            <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                <a href="?controleur=annonce&methode=mesPromenades&statut=a_venir" style="padding: 10px 16px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: all 0.3s ease; {% if statut == 'a_venir' %}background-color: #DDA15E; color: #FEFAE0;{% else %}background-color: white; color: #537031; border: 1px solid #ddd;{% endif %}" onmouseover="{% if statut != 'a_venir' %}this.style.borderColor='#DDA15E'{% endif %}" onmouseout="{% if statut != 'a_venir' %}this.style.borderColor='#ddd'{% endif %}">
                    <i class="bi bi-calendar-check"></i> À venir
                </a>
                <a href="?controleur=annonce&methode=mesPromenades&statut=en_cours" style="padding: 10px 16px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: all 0.3s ease; {% if statut == 'en_cours' %}background-color: #537031; color: #FEFAE0;{% else %}background-color: white; color: #537031; border: 1px solid #ddd;{% endif %}" onmouseover="{% if statut != 'en_cours' %}this.style.borderColor='#537031'{% endif %}" onmouseout="{% if statut != 'en_cours' %}this.style.borderColor='#ddd'{% endif %}">
                    <i class="bi bi-play-circle"></i> En cours
                </a>
                <a href="?controleur=annonce&methode=mesPromenades&statut=archivee" style="padding: 10px 16px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: all 0.3s ease; {% if statut == 'archivee' %}background-color: #BC6C25; color: #FEFAE0;{% else %}background-color: white; color: #537031; border: 1px solid #ddd;{% endif %}" onmouseover="{% if statut != 'archivee' %}this.style.borderColor='#BC6C25'{% endif %}" onmouseout="{% if statut != 'archivee' %}this.style.borderColor='#ddd'{% endif %}">
                    <i class="bi bi-archive"></i> Archivées
                </a>
            </div>
        </div>

        <!-- Liste des promenades -->
        {% if promenades|length > 0 %}
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 24px;">
                {% for promenade in promenades %}
                    <div style="background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 12px rgba(83, 112, 49, 0.08); transition: all 0.3s ease; border-top: 4px solid {% if statut == 'a_venir' %}#DDA15E{% elseif statut == 'en_cours' %}#537031{% elseif statut == 'terminee' %}#9AAD5A{% else %}#BC6C25{% endif %};" onmouseover="this.style.transform='translateY(-6px)'; this.style.boxShadow='0 6px 24px rgba(83, 112, 49, 0.15)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 2px 12px rgba(83, 112, 49, 0.08)'">
                        
                        <!-- En-tête promenade -->
                        <div style="padding: 20px; background-color: #f5f5f5; border-bottom: 1px solid #eee;">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 15px;">
                                <div style="flex: 1;">
                                    {% if promenade.annonce %}
                                        <h3 style="color: #537031; margin: 0 0 8px 0; font-size: 16px; font-weight: 600;">{{ promenade.annonce.titre }}</h3>
                                    {% else %}
                                        <h3 style="color: #537031; margin: 0 0 8px 0; font-size: 16px; font-weight: 600;">Promenade</h3>
                                    {% endif %}
                                    {% if promenade.date_promenade %}
                                        <p style="color: #999; margin: 0; font-size: 13px;">
                                            <i class="bi bi-calendar-event"></i> {{ promenade.date_promenade|date('d/m/Y H:i') }}
                                        </p>
                                    {% endif %}
                                </div>
                                <span style="display: inline-block; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; background-color: {% if statut == 'a_venir' %}#ffe8d4{% elseif statut == 'en_cours' %}#d4e8d4{% elseif statut == 'terminee' %}#c8e6d4{% else %}#ffe8d4{% endif %}; color: {% if statut == 'a_venir' %}#8b4513{% elseif statut == 'en_cours' %}#4a5f28{% elseif statut == 'terminee' %}#2d5a3d{% else %}#8b4513{% endif %};">
                                    {% if statut == 'a_venir' %}
                                        <i class="bi bi-calendar-check"></i> À venir
                                    {% elseif statut == 'en_cours' %}
                                        <i class="bi bi-play-circle"></i> En cours
                                    {% elseif statut == 'terminee' %}
                                        <i class="bi bi-check-circle"></i> Terminée
                                    {% else %}
                                        <i class="bi bi-archive"></i> Archivée
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <!-- Détails promenade -->
                        <div style="padding: 20px;">
                            
                            <!-- Infos maître -->
                            {% if promenade.maitre %}
                                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px; padding-bottom: 16px; border-bottom: 1px solid #eee;">
                                    {% if promenade.maitre.photoProfil %}
                                        <img src="images/utilisateur/{{ promenade.maitre.photoProfil }}" alt="{{ promenade.maitre.pseudo }}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                                    {% else %}
                                        <div style="width: 40px; height: 40px; border-radius: 50%; background-color: #9AAD5A; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-person" style="color: #FEFAE0;"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <p style="margin: 0; font-weight: 600; color: #537031; font-size: 14px;">{{ promenade.maitre.pseudo }}</p>
                                        <p style="margin: 0; font-size: 12px; color: #999;"><i class="bi bi-house-heart"></i> Propriétaire</p>
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Détails -->
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-bottom: 16px;">
                                {% if promenade.annonce %}
                                    <div>
                                        <p style="color: #999; margin: 0; font-size: 12px; display: flex; align-items: center; gap: 4px;">
                                            <i class="bi bi-geo-alt"></i> Lieu
                                        </p>
                                        <p style="color: #537031; margin: 4px 0 0 0; font-weight: 600; font-size: 13px;">{{ promenade.annonce.endroitPromenade }}</p>
                                    </div>
                                    <div>
                                        <p style="color: #999; margin: 0; font-size: 12px; display: flex; align-items: center; gap: 4px;">
                                            <i class="bi bi-clock"></i> Durée
                                        </p>
                                        <p style="color: #537031; margin: 4px 0 0 0; font-weight: 600; font-size: 13px;">{{ promenade.annonce.duree }}min</p>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Actions -->
                            <div style="display: flex; gap: 8px;">
                                <a href="?controleur=annonce&methode=afficherPromenade&id_annonce={{ promenade.id_annonce }}" style="flex: 1; text-align: center; padding: 10px; background-color: #537031; color: #FEFAE0; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='#4a5f28'" onmouseout="this.style.backgroundColor='#537031'">
                                    <i class="bi bi-eye"></i> Détails
                                </a>
                                {% if promenade.statut == 'en_cours' %}
                                    <a href="?controleur=annonce&methode=marquerTerminee&id_annonce={{ promenade.id_annonce }}" style="flex: 1; text-align: center; padding: 10px; background-color: #9AAD5A; color: #FEFAE0; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='#7a8f47'" onmouseout="this.style.backgroundColor='#9AAD5A'">
                                        <i class="bi bi-check-circle"></i> Terminer
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div style="background: white; border-radius: 12px; padding: 80px 40px; text-align: center; box-shadow: 0 2px 12px rgba(83, 112, 49, 0.08);">
                <i class="bi bi-inbox" style="font-size: 56px; color: #ddd; margin-bottom: 20px; display: block;"></i>
                <h3 style="color: #537031; margin: 0 0 10px 0; font-size: 20px;">Aucune promenade</h3>
                <p style="color: #999; margin: 0 0 20px 0;">Vous n'avez pas de promenades {% if statut == 'a_venir' %}à venir{% elseif statut == 'en_cours' %}en cours{% elseif statut == 'terminee' %}terminées{% else %}archivées{% endif %}.</p>
                <div style="display: flex; justify-content: center; margin-top: 8px;">
                    <a href="?controleur=annonce&methode=afficherAllAnnonces" style="display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; background: linear-gradient(135deg, #537031 0%, #4a5f28 100%); color: #FEFAE0; border-radius: 999px; text-decoration: none; font-weight: 700; transition: all 0.3s ease; box-shadow: 0 4px 14px rgba(83, 112, 49, 0.25);" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 18px rgba(83, 112, 49, 0.3)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 14px rgba(83, 112, 49, 0.25)'">
                        <i class="bi bi-search"></i> Voir les annonces disponibles
                    </a>
                </div>
    {% endif %}

    </div>
</div>
{% endif %}
{% endblock %}




